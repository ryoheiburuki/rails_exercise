<p id="notice"><%= notice %></p>

<h1>登録済みのブログ一覧</h1>

<table>
  <thead>
    <tr>
      <th>timestamp</th>
      <th>title</th>
      <th>content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.created_at %></td>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= link_to '表示', blog %></td>
        <td><%= link_to '編集', edit_blog_path(blog) %></td>
        <td><%= link_to '削除', blog, method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_blog_path %>
